@model IEnumerable<PatientPortalApp.Models.Vital>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Vitals</h2>

<p>
    @Html.ActionLink("Add Vital", "Create", new { id = "create-vital" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Patient Name")
        </th>
        <th>
            @Html.DisplayName("Date Recorded")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Temperature)
        </th>
        <th>
            @Html.DisplayName("Blood Pressure")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pulse)
        </th>
        <th>
            @Html.DisplayName("Date Recorded")
        </th>
        <th>
            @Html.DisplayName("Created By")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VitalDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Temperature)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodPressure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pulse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VitalId }, new { @class = "btn btn-primary", @style = "width : 80px;" })
            @Html.ActionLink("Details", "Details", new { id=item.VitalId }, new { @class = "btn btn-primary", @style = "width : 80px;" })
            @Html.ActionLink("Delete", "Delete", new { id=item.VitalId }, new { @class = "btn btn-danger", @style = "width : 80px;" })
        </td>
    </tr>
}

</table>
