
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/bootstrap.min.js"></script>
    <title>Landing</title>

	<style>
		img{
			background-blend-mode: darken;
		}
		a {
			font-size: xx-large;
		}
	</style>
</head>
<body>
	<h1 class=" d-flex justify-content-center pt-5" style="color: #1E90FF">Welcome to the Patient Management Portal</h1>
	<div class="d-flex justify-content-center pt-lg-5">
		<p>
			<img class="img-fluid" src="~/Images/Medical-Iconv1.png" style="height: 200px" />
		</p>
	</div>
	<div class="d-flex justify-content-center pt-lg-5">
		<p class="p-5">
			@Html.RouteLink("Login", new { action = "Login", Controller = "Account" })

		</p>
		<p class="p-5">
			@Html.RouteLink("Register", new { action = "Register", Controller = "Account" })
		</p>
	</div>
</body>
</html>

