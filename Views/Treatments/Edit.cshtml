@model PatientPortalApp.Models.Treatment

@{
    ViewBag.Title = "Edit";
}

<h2>Manage Treatment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Treatment Number @(Model.TreatmentId)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TreatmentId)

        <div class="form-group">
            @Html.LabelFor(model => model.TreatDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TreatDescription, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.TreatDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
		<div class="form-group">

			<div>
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</div>
    </div>
    <br />
}
<div>
	@Html.ActionLink("Back to List", "Index", new { id = "back-to-treatment" }, new { @class = "btn btn-primary", @style = "width : 120px;" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
	$("#TreatDescription").css("width", "100%");
</script>