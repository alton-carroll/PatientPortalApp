@model PatientPortalApp.Models.Appointment

@{
	ViewBag.Title = "Delete";
}

<style>
	dd {
		color: black;
	}
</style>


<h2>Cancel Appointment</h2>

<h3>Are you sure you want to delete this Appointment for @(Model.Patient.FullName)?</h3>
<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Patient.FullName)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Patient.FullName)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Provider.ProviderName)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Provider.ProviderName)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.AppointmentDate)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.AppointmentDate)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Reason)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Reason)
		</dd>

	</dl>

	@using (Html.BeginForm())
		{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Delete" class="btn btn-danger" />
			@Html.ActionLink("Back to List", "Index", new { id = "back-to-list" }, new { @class = "btn btn-primary" })
		</div>
		}
</div>
